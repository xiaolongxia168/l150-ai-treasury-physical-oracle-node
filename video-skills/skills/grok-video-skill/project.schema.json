{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["scenes", "seed", "defaults"],
  "properties": {
    "name": {"type": "string"},
    "seed": {
      "type": "object",
      "required": ["tailFrames", "pickFromTail"],
      "properties": {
        "tailFrames": {"type": "integer", "minimum": 1, "maximum": 30},
        "pickFromTail": {"type": "integer", "minimum": 1, "maximum": 30}
      }
    },
    "defaults": {
      "type": "object",
      "required": ["characterLock", "negatives", "style"],
      "properties": {
        "characterLock": {"type": "string"},
        "negatives": {"type": "string"},
        "style": {"type": "string"}
      }
    },
    "scenes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["scene", "say", "how"],
        "properties": {
          "scene": {"type": "string"},
          "say": {"type": "string"},
          "how": {"type": "string"}
        }
      }
    }
  }
}
